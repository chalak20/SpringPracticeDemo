<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
		
<!-- ___________________________________________This is our bean ______________________________________________ -->
	
	<!-- 
		By default values are String so we need to give type for avoiding ambiguity
	-->
	
	<bean class="com.spring.ambiguity.Addition" name="add">
		<constructor-arg value="23" type="Integer"/>
		<constructor-arg value="55" type="Integer"/>
	</bean>
   
</beans>